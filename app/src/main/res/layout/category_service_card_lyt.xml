<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/redemption_card_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/service_image_height"
        android:layout_marginBottom="@dimen/service_card_spacing">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/service_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/service_image_height"
                android:src="@drawable/ic_sample_service"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/service_info_lyt_height"
                android:layout_gravity="bottom"
                android:background="@color/service_info_lyt_bg_color">

                <TextView
                    android:id="@+id/service_name"
                    style="@style/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/service_info_spacing"
                    android:layout_toLeftOf="@+id/price_off_on_service"
                    android:text="Service 1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/service_info_txt_size" />

                <TextView
                    android:id="@+id/price_off_on_service"
                    style="@style/roboto_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="20% off"
                    android:textColor="@color/white"
                    android:textSize="@dimen/service_info_txt_size"
                    android:layout_marginRight="@dimen/service_info_spacing"/>

            </RelativeLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>